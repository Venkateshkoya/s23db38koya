extends layout

block content
  h1= title
  p Welcome to #{title} to generate dynamically web pages.

  if (!user)
    a(href="/login") Login
    br
    a(href="/register") Register
  if (user)
    button(type="button", class="btn btn-secondary", onclick='goFaster()') Press Me
    div#faster Increase the speed.

    p You are currently logged in as #{user.username}
    a(href="/Shoe") Take me to Shoe
    br
    a(href="/logout") Logout

  script.
    var mph = 20;
    var change = 1;
    function goFaster() {
      mph += change;
      change += 1;
      document.getElementById("faster").innerText = `MPH ${mph} with change ${change}`;
    }
    
    console.log("Link to server http://localhost:3000/")
  
  a(href='/shoes') View shoes
